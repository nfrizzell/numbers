@model numbers.Models.FormResult

<div class="content grid-item">
    <h3 style="margin:0;"><u>Primality test</u></h3>
    <div class="form-block" style="background-color:rgb(210 255 210); border-color:limegreen;">
        <b>Test a positive integer to see if it is prime</b>
        <form class="table-form">
            <div style="display: table-row;">
                <label for = "number">Enter integer: </label>
                <input id="number-field" class="small-number-input" name="input" placeholder="@Model.input">
            </div>
            <div style="display: table-row;">
                <label>Result:</label>
                <input id="result-field" class="small-number-input" readonly placeholder="@Model.result">
            </div>
            <div>
                <input type="submit" name="Test"/>
            </div>
        </form>
    </div>
</div>